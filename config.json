{
  "http_headers": {
    "/index.html": {
      "Cache-Control": "public, max-age=3600"  // 1 hour cache for index.html
    },
    "/*.js": {
      "Cache-Control": "public, max-age=86400, immutable"  // 1 day cache for JS files
    },
    "/*.css": {
      "Cache-Control": "public, max-age=86400, immutable"  // 1 day cache for CSS files
    },
    "/courses.json": {
      "Cache-Control": "public, max-age=86400, immutable"
    },
    "/*.yaml": {
      "Cache-Control": "public, max-age=86400, immutable"
    },
    "/*.png": {
      "Cache-Control": "public, max-age=31536000, immutable"  // 1 year cache for image files
    },
    "/*.jpg": {
      "Cache-Control": "public, max-age=31536000, immutable"  // 1 year cache for image files
    },
    "/*.jpeg": {
      "Cache-Control": "public, max-age=31536000, immutable"  // 1 year cache for image files
    }
  }
}
