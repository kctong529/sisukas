{
  "type": "module",
  "devDependencies": {
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "9.39.0",
    "htmlhint": "1.7.1",
    "jsdom": "26.1.0",
    "stylelint": "16.25.0",
    "stylelint-config-standard": "37.0.0",
    "vite": "6.4.1",
    "vitest": "3.2.4"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
